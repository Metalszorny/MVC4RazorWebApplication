@{
    ViewBag.Title = "FindRelation";
}
<html>
    <head>
        <title>MVC4Razor - Find Relation</title>
    </head>
    <body>
        <form name="FindRelation" method="post">
            <h3>Sort:</h3>
            <label for="relationEmployee"><b>Employee:</b></label>
            <input type="text" value="" name="relationEmployee" id="relationEmployee" />
            <label for="relationWorkplace"><b>Workplace:</b></label>
            <input type="text" value="" name="relationWorkplace" id="relationWorkplace" />
            <input type="submit" value="Query" />
        </form>
        <table border="1">
            <tr>
                <td colspan="3">
                    <h2>Relations</h2>
                </td>
            </tr>
            <tr>
                <td><b>Id:</b></td>
                <td><b>Employee:</b></td>
                <td><b>Workplace:</b></td>
            </tr>
            @if (ViewBag.Relations != null)
            {
                foreach (var oneItem in ViewBag.Relations.Items)
                {
                    <tr>
                        <td>@oneItem.RelationId</td>
                        <td>@oneItem.RelationEmployee</td>
                        <td>@oneItem.RelationWorkplace</td>
                    </tr>
                }
            }
        </table>
        <br />
        <div>@Html.ActionLink("Back", "Index")</div>
    </body>
</html>